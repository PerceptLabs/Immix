    {
      "name": "Messages",
      "item": [
        {
          "name": "List Messages",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/messages?conversation={{conversationId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "messages"
              ],
              "query": [
                {
                  "key": "conversation",
                  "value": "{{conversationId}}"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"conversation\": \"{{conversationId}}\",\n    \"role\": \"user\",\n    \"content\": \"Hello, Immix!\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/messages",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "messages"
              ]
            }
          },
          "response": []
        }
      ]
    },
